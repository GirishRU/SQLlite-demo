<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimal_wallpaper_hd_for_phone_005"
    android:orientation="vertical"
    tools:context=".MainActivity3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:fontFamily="@font/open_sans_light"
        android:paddingStart="25dp"
        android:text="Hello "
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#611414" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="350dp"
            android:layout_height="72dp"
            android:layout_weight="0.33"
            android:fontFamily="cursive"
            android:hint="Username"
            android:inputType="text"
            android:textColor="#FFFCFC"
            android:textColorHighlight="#EDE1E1"
            android:textColorLink="#F6E9E9" />

        <EditText
            android:id="@+id/psw"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:layout_weight="0.33"
            android:fontFamily="cursive"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorLink="#F12222" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="160dp"
                android:onClick="goBack"
                android:text="BACK"
                android:textColor="#260027"
                app:icon="@drawable/baseline_keyboard_arrow_left_black_24dp"
                app:iconTint="#9C27B0"
                app:rippleColor="#9C27B0"
                app:strokeColor="#9C27B0" />

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F1F0F0"
                android:onClick="goToFeatures"
                android:text="LOGIN"
                app:rippleColor="#EC1414" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>