<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimal_wallpaper_hd_for_phone_005"
    android:orientation="vertical"
    tools:context=".MainActivity5">

    <TextView
        android:id="@+id/greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:fontFamily="@font/open_sans_light"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/add"
            android:layout_width="350dp"
            android:layout_height="86dp"
            android:layout_weight="0.25"
            android:fontFamily="serif"
            android:onClick="userAdd"
            android:text="Add user"
            android:textAlignment="textStart"
            app:rippleColor="#231010" />

        <Button
            android:id="@+id/delete"
            android:layout_width="350dp"
            android:layout_height="64dp"
            android:layout_weight="0.25"
            android:fontFamily="serif"
            android:onClick="userDelete"
            android:text="DELETE "
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/update"
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_weight="0.25"
            android:fontFamily="serif"
            android:onClick="userUpdate"
            android:text="UPDATE "
            android:textAlignment="textStart" />

        <Button
            android:id="@+id/display"
            android:layout_width="350dp"
            android:layout_height="83dp"
            android:layout_weight="0.25"
            android:fontFamily="serif"
            android:onClick="userDisplay"
            android:text="LIST of USERS"
            android:textAlignment="textStart" />

    </LinearLayout>

    <Button
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="goBack"
        android:text="LOGOUT"
        android:textColor="#260027"
        app:icon="@drawable/baseline_keyboard_arrow_left_black_24dp" />

</LinearLayout>