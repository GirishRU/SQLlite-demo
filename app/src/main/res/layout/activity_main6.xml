<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimal_wallpaper_hd_for_phone_021"
    android:orientation="vertical"
    tools:context=".MainActivity6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="320dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="350dp"
            android:layout_height="81dp"
            android:layout_weight="0.33"
            android:fontFamily="cursive"
            android:hint="Username"
            android:inputType="text" />

        <EditText
            android:id="@+id/psw"
            android:layout_width="350dp"
            android:layout_height="97dp"
            android:layout_weight="0.33"
            android:fontFamily="cursive"
            android:hint="Password"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="160dp"
                android:fontFamily="serif"
                android:onClick="goBack"
                android:text="BACK"
                android:textColor="#260027"
                app:icon="@drawable/baseline_keyboard_arrow_left_black_24dp" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:onClick="userAdd"
                android:shadowColor="#A89B9B"
                android:text="ADD"
                android:textColor="#F3E6E6" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>